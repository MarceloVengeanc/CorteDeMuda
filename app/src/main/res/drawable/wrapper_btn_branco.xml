<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:tint="@color/white">
        <corners android:radius="5dip" />
        <solid android:color="@color/btnFiltrar" />
        <stroke
            android:width="2dip"
            android:color="@color/btnFiltrar" />
        <padding
            android:bottom="4dip"
            android:left="4dip"
            android:right="4dip"
            android:top="4dip" />
    </shape>
</item>
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <corners android:radius="5dip" />
        <solid android:color="@color/temaCinza" />
        <stroke
            android:width="2dip"
            android:color="@color/temaCinza" />
        <padding
            android:bottom="4dip"
            android:left="4dip"
            android:right="4dip"
            android:top="4dip" />
    </shape>
</item>
</selector>